<Window x:Class="Pokemon_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cmbPokemon" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmbPokemon_SelectionChanged"/>
        <Image x:Name="imgSource" HorizontalAlignment="Left" Height="349" Margin="407,40,0,0" VerticalAlignment="Top" Width="541"/>
        <Button x:Name="btnChange" Content="Show Back" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Height="30" Width="120" Click="btnChange_Click"/>
        <TextBox x:Name="txtWeight" HorizontalAlignment="Left" Margin="400,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Margin="400,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
