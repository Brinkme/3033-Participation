<Window x:Class="Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cmbBoxPokemon" HorizontalAlignment="Left" Margin="608,88,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Image x:Name="imgSource" HorizontalAlignment="Left" Height="166" Margin="67,31,0,0" VerticalAlignment="Top" Width="151"/>
        <ListBox x:Name="lstBoxPokemon" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,233,0,0"/>

    </Grid>
</Window>
