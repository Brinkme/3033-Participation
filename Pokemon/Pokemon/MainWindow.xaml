<Window x:Class="Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid OpacityMask="Black">
        <Grid.Background>
            <ImageBrush ImageSource="/png-clipart-poke-ball-open-wv-computer-wallpaper-desktop-wallpaper.png" Stretch="Fill"/>
        </Grid.Background>
        <ComboBox x:Name="cmbBoxPokemon" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Image x:Name="imgSource" HorizontalAlignment="Left" Height="349" Margin="407,40,0,0" VerticalAlignment="Top" Width="541"/>
        <Button x:Name="btnChange" Content="Show Back" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Height="30" Width="120" Click="btnChange_Click"/>

    </Grid>
</Window>
